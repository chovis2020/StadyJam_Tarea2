<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdgandroidbolivia.calculadora.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EL RESULTADO ES : "
                android:textSize="15dp"
                android:textColor="#212020"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/cajaResultado"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="             resultado"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/salir"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="salir"
                android:textSize="20dp"
                android:background="#87e2ef"
                android:onClick="salir"
                android:textAllCaps="true"/>
            <Button
                android:id="@+id/limpiar"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="C"
                android:textSize="20dp"
                android:background="#bcf6b6"
                android:onClick="limpiar"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:background="#938e8e"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/siete"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="siete"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/ocho"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="ocho"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/nueve"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="nueve"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/multiplicacion"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="multiplicacion"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/cuatro"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="cuatro"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/cinco"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="cinco"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/seis"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="seis"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/resta"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="50dp"
                    android:background="#edebeb"
                    android:onClick="resta"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/uno"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="uno"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/dos"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="dos"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/tres"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="tres"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/suma"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="30dp"
                    android:background="#edebeb"
                    android:onClick="suma"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/punto"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="40dp"
                    android:background="#edebeb"
                    android:onClick="puntu"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/cero"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="20dp"
                    android:background="#edebeb"
                    android:onClick="cero"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/igual"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:background="#42b224"
                    android:onClick="igual"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/division"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textSize="30dp"
                    android:background="#edebeb"
                    android:onClick="division"
                    android:textAllCaps="true"/>
             </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
